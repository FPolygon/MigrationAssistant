{
  "ServiceConfiguration": {
    "DataPath": "C:\\ProgramData\\MigrationTool\\Data",
    "LogPath": "C:\\ProgramData\\MigrationTool\\Logs",
    "PipeName": "MigrationService_{ComputerName}",
    "StateCheckIntervalSeconds": 300,
    "EnableDebugLogging": false,
    "QuotaManagement": {
      "WarningThresholdPercentage": 80.0,
      "CriticalThresholdPercentage": 95.0,
      "MinimumFreeSpaceMB": 1024,
      "DefaultCompressionFactor": 0.7,
      "MonitoringIntervalMinutes": 60,
      "WarningCooldownHours": 24,
      "EscalationCooldownHours": 72,
      "AutoEscalationEnabled": true,
      "ProactiveMonitoringEnabled": true,
      "WarningTypes": {
        "HighUsage": {
          "Enabled": true,
          "ThresholdPercentage": 80.0,
          "CooldownHours": 24
        },
        "LowSpace": {
          "Enabled": true,
          "ThresholdMB": 2048,
          "CooldownHours": 24
        },
        "InsufficientBackupSpace": {
          "Enabled": true,
          "BufferPercentage": 10.0,
          "CooldownHours": 12
        },
        "QuotaApproaching": {
          "Enabled": true,
          "ThresholdPercentage": 90.0,
          "CooldownHours": 48
        }
      },
      "EscalationRules": {
        "CriticalQuotaIssues": {
          "Enabled": true,
          "ThresholdPercentage": 95.0,
          "Priority": "Critical"
        },
        "InsufficientBackupSpace": {
          "Enabled": true,
          "Priority": "High"
        },
        "RepeatedWarnings": {
          "Enabled": true,
          "WarningCountThreshold": 3,
          "TimeWindowHours": 72,
          "Priority": "Medium"
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\ProgramData\\MigrationTool\\Logs\\service-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "EventLog",
        "Args": {
          "source": "MigrationService",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}